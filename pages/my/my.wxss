/* pages/my/my.wxss */
@import "../../utils/animate.wxss";

page{
  background-color:#FFFFFF;
  height:100%;
  width:100%;
} 
.head{
  background-color: #FFD52E;
  height:150px;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
   
}
.orderBox{
  border-radius: 4px;  
  background-color:#FFFFFF;
  height:87px;
  width:96%;
  margin-top:20px;
  margin-left:2%;
  overflow: hidden;
  position:relative;
  z-index: 0;
  box-shadow: 0px 5px 5px rgba(0,0,0,0.2);
  display:flex;
  align-items: center;
  flex-direction:row;
  font-weight: bolder;
}


.letter{
  margin-top:60px;
  display:flex;
  justify-content: center;
}

.letter-front{
  display:flex;
  align-items: center;
  
 
}

.letter-back{
  width:90%;
  margin-left:5%;
  margin-right:5%;
  border:3px solid #FFC0CB;
  border-radius: 15px;
}


.letter-row,.letter-title{
  display: flex;
  margin:10px 10px;
  font-size:14px;
}

.letter-row{
  font-size:14px;
  line-height: 25px;
}



 

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
  
.modalDlg{
  width: 300px;
  height: 255px;
  position: fixed;
  z-index: 9999;
  background-color: #fff;
  border-radius: 5px; 
 
}

.feedBackText{
  border:0.5px solid #e9e9e9;
  padding:5px 5px 5px 5px;
  border-radius: 5px;
  margin:10px;
  width:270px;
  height:150px;
  color:#333333;
}

.row{
  margin-top:10px;
  display: flex;
  align-items: center;
  justify-content: center;
}














.myAccount{
  margin-top:60px;
  width:96%;
  margin-left:2%;
  margin-bottom:150px;
}

.account-center{
  display:flex;
  align-items: center;
  justify-content: center;
  margin-top:20px;
} 

.button-main{
  height:40px;
  margin-top:20px;
  display:flex;
  align-items: center;
  flex-direction:row;
}

.button-left{
  height:40px;
  width:86px;
  margin-top:20px;
  margin-left:50px;
  display:flex;
  align-items: center;
  justify-content: center;
  border:0.5px solid #CCCCCC;
  border-radius: 4px;
  font-size:16px;
  color:#666666;
}

.button-right{
  height:40px;
  width:86px;
  margin-top:20px;
  margin-left:auto;
  margin-right:50px;
  display:flex;
  align-items: center;
  justify-content: center;
  border:1px solid red;
  border-radius: 4px;
  border:1px solid #FFD52E;
  font-size:16px;
  color:#FFCC00;
}

 










