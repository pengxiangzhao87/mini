/* pages/my/my.wxss */
page{
  background-color:#FFFFFF;
  height:100%;
  width:100%;
} 
.head{
  background-color: #FFD52E;
  height:150px;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
   
}
.orderBox{
  border-radius: 4px;  
  background-color:#FFFFFF;
  height:87px;
  width:96%;
  margin-top:20px;
  margin-left:2%;
  overflow: hidden;
  position:relative;
  z-index: 0;
  box-shadow: 0px 5px 5px rgba(0,0,0,0.2);
  display:flex;
  align-items: center;
  flex-direction:row;
}

.QR-code{
  margin-top:60px;
  width:96%;
  margin-left:2%;
}
.myAccount{
  margin-top:60px;
  width:96%;
  margin-left:2%;
  margin-bottom:150px;
}

.account-center{
  display:flex;
  align-items: center;
  justify-content: center;
  margin-top:20px;
} 

.button-main{
  height:40px;
  margin-top:20px;
  display:flex;
  align-items: center;
  flex-direction:row;
}

.button-left{
  height:40px;
  width:86px;
  margin-top:20px;
  margin-left:50px;
  display:flex;
  align-items: center;
  justify-content: center;
  border:1px solid #CCCCCC;
  border-radius: 4px;
  font-size:16px;
  color:#666666;
}

.button-right{
  height:40px;
  width:86px;
  margin-top:20px;
  margin-left:auto;
  margin-right:50px;
  display:flex;
  align-items: center;
  justify-content: center;
  border:1px solid red;
  border-radius: 4px;
  border:1px solid #FFD52E;
  font-size:16px;
  color:#FFCC00;
}