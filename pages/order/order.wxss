/* pages/my/order/order.wxss */
page{
  background-color:rgb(243, 243, 243);
  height:100%;
  width:100%;
} 
.head{
  display: flex;  
  flex-direction: row ;
  align-items: center;
  margin-top:10px;
  height:32px;
  margin-left:10px;
}
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 110px;  
  width:90%;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:10px;
  width: 15px;  
  height: 15px;  
}  

.title{
  display: flex;  
  flex-direction: row ;
  align-items: center;
  margin-top:15px;
  margin-bottom: 15px;
  color:#666666;
  font-size:14px;
}
.title-item{
  display:flex;
  align-items: center;
  justify-content: center;
  width:33%;
}

.item.checked{
  border-bottom: 2px solid #FFD52E ;
}

.list-item{
  background-color: #FFFFFF;
  margin-left:3%;
  margin-bottom: 10px;
  width:94%;
  border-radius: 4px;
}

.list-head{
  display: flex;  
  flex-direction: row ;
  font-size:12px;
  height: 43px;
  align-items: center;
  border-bottom: 0.5px solid #E5E5E5;
  margin-left:5px;
  margin-right:5px;
}

.list-body{
  height:70px;
  margin-left:5px;
  margin-right:5px;
  border-bottom: 0.5px solid #E5E5E5;
  display: flex;  
  flex-direction: row ;
  align-items: center;
  white-space: nowrap;
}

.list-price{
  height:43px;
  display: flex;  
  align-items: center;
  flex-direction: row ;
  margin-left:0px;
  margin-right:5px;
  font-size:12px;
}

.list-price.bottom{
  height:43px;
  display: flex;  
  align-items: center;
  flex-direction: row ;
  margin-left:5px;
  margin-right:5px;
  font-size:12px;
  border-bottom: 0.5px solid #E5E5E5;
}

.list-bottom{
  height:43px;
  display: flex;  
  align-items: center;
  flex-direction: row ;
  font-size:12px;
  width:170px;
  margin-left:auto;
  margin-right:5px;
}

.list-bottom-button{
  display: flex;
  width:80px;
  height:28px;
  align-items: center;
  justify-content: center;  
  border-radius: 2px;
  font-size: 12px;
}