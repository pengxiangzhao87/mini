/* pages/my/order/detail/detail.wxss */
page{
  width:100%;
  height:100%;
  background-color: rgb(248, 248, 248)
}
.head{
  margin:10px 0px 10px 0px;
  height:70px;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
}
.body{
  margin:10px 0px 10px 0px;
  padding-bottom:10px;
  background-color: #FFFFFF;
}
.list-item{
  display: flex;  
  flex-direction: row  ;
  margin-top:5px;
  margin-left:10px;
  margin-right:10px;
  height:95px;
}

.goods-name{
  font-weight: 500;
  align-items: center;
  height:40px;
  font-size:14px;
  margin-right:5px;
  margin-top:5px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-canFeed{
  width:60px;
  height:20px;
  border:solid 0.5px #999999;
  border-radius: 200px;
  color:#666666;
  display: flex;
  font-size: 10px;
  align-items: center;
  justify-content: center;
  margin-left:auto;
  margin-right:0px;
  margin-top:5px;
}
.extra-list{
  margin-left:86px;
  margin-right:10px;
}
.extra-price{
  color:green;
  height:20px;
  font-size:12px;
  display: flex;
  align-items: center;
  margin-right:10px;
  
}
.extra-price.red{
  color:#FF1F1F ;
  display: flex;
  align-items: center;
  height:20px;
  font-size:12px;
  margin-right:10px;

}
.extra-pic{
  height:80px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;

}

.foot{
  margin-bottom:70px;
  padding-bottom:10px;
  background-color: #FFFFFF;
  color:#666666;
  font-size:12px;
}
.foot-item{
  display: flex; 
  flex-direction: row ; 
  align-items: center;
  margin-left:10px;
  margin-right:10px;
  margin-bottom:10px;
}

.foot-item-left{
  display:flex;
}

.foot-item-right{
  display:flex;
  margin-left:auto;
  margin-right:10px;
  align-items: center;
}

.page_bottom{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #FFD52E;
  display: flex;
  border-radius: 4px;
  align-items: center;
  justify-content: center;
}

.page_bottom.gray{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #D9D9D9;
  display: flex;
  align-items: center;
  flex-direction: row ; 
} 

.page_bottom_pay{
  width:100%;
  height:45px;
  position:fixed; 
  bottom:5px;
  border-top: 1px solid rgb(245, 245, 245);
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
}

.cancel{
  width:100px;
  height:35px;
  display: flex;
  align-items: center;
  justify-content: center;  
  border:0.5px solid #D9D9D9;
  border-radius: 100px;
  color:#999999;
  font-size:14px;
  margin-right:10px;
  margin-left:40%;
}

.continue{
  margin-left:auto;
  margin-right:10px;
  width:120px;
  height:35px;
  border-radius: 100px;
  background-color:#FFD52E;
  display: flex;
  align-items: center;
  justify-content: center;  
  color:#333333;
  font-size:14px;
}
 