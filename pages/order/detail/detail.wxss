/* pages/my/order/detail/detail.wxss */
page{
  width:100%;
  height:100%;
  background-color: rgb(243, 243, 243);
}
.head{
  margin:10px 0px 10px 0px;
  height:70px;
  background-color: #FFFFFF;
  border:0.5px solid #FFD52E;
  display: flex;
  align-items: center;
}
.body{
  margin:10px 0px 10px 0px;
  background-color: #FFFFFF;
}
.list-item{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  margin-left:10px;
  margin-right:10px;
  height:96px;
  border-bottom:0.5px solid #E5E5E5;
}
.list-item.bottom{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  margin-left:10px;
  margin-right:10px;
  height:96px;
}
.list-canFeed{
  width:64px;
  height:24px;
  background-color:#FFD52E;
  border-radius: 2px;
  color:#333333;
  display: flex;
  font-size: 11px;
  align-items: center;
  justify-content: center;
  margin-left:auto;
  margin-right:0px;
}
.list-canFeed.no{
  width:64px;
  height:24px;
  background-color:#D9D9D9;
  border-radius: 2px;
  color:#333333;
  display: flex;
  font-size: 11px;
  align-items: center;
  justify-content: center;
  margin-left:auto;
  margin-right:0px;
}
.extra-list{
  height:100px;
  margin-left:10px;
  margin-right:10px;
  border-bottom:0.5px solid #E5E5E5;
}
.extra-price{
  color:#FF982E;
  height:20px;
  font-size:12px;
  display: flex;
  align-items: center;
}
.extra-price.red{
  color:#FF1F1F ;
  display: flex;
  align-items: center;
  height:20px;
  font-size:12px;
}
.extra-pic{
  height:80px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;

}


.page_bottom{
  width:90%;
  height:45px;
  margin-left:5%;
  position:fixed; 
  bottom:5px;
  background-color: #FFD52E;
  display: flex;
  border-radius: 4px;
  align-items: center;
  justify-content: center;
}