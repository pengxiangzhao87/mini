/* pages/my/order/detail/detail.wxss */
page{
  width:100%;
  height:100%;
  background-color: rgb(248, 248, 248)
}
.head{
  margin:10px 0px 10px 0px;
  height:70px;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
}
.body{
  margin:10px 0px 10px 0px;
  background-color: #FFFFFF;
}
.list-item{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  margin-top:5px;
  margin-left:10px;
  margin-right:10px;
  border-bottom:0.5px solid #E5E5E5;
  padding-bottom: 10px;
}
.list-item.line{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  margin-top:5px;
  margin-left:10px;
  margin-right:10px;
  border-bottom:none;
  padding-bottom: 10px;
}
.list-canFeed{
  width:60px;
  height:24px;
  border:solid 0.5px #999999;
  border-radius: 200px;
  color:#666666;
  display: flex;
  font-size: 10px;
  align-items: center;
  justify-content: center;
  margin-left:auto;
  margin-right:0px;
}
.list-canFeed.no{
  width:60px;
  height:24px;
  border:solid 0.5px #999999;
  border-radius: 200px;
  color:#666666;
  display: flex;
  font-size: 11px;
  align-items: center;
  justify-content: center;
  margin-left:auto;
  margin-right:0px;
}
.extra-list{
  margin-left:10px;
  margin-right:10px;
  border-bottom:0.5px solid #E5E5E5;
}
.extra-price{
  color:green;
  height:20px;
  font-size:12px;
  display: flex;
  align-items: center;
  margin-left:10px;
  margin-right:10px;
}
.extra-price.red{
  color:#FF1F1F ;
  display: flex;
  align-items: center;
  height:20px;
  font-size:12px;
  margin-left:10px;
  margin-right:10px;
}
.extra-pic{
  height:80px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}

.foot{
  margin-bottom:70px;
  padding-bottom:10px;
  background-color: #FFFFFF;
  color:#666666;
  font-size:12px;
}
.foot-item{
  display: flex; 
  flex-direction: row ; 
  align-items: center;
  margin-left:10px;
  margin-right:10px;
  margin-bottom:10px;
}

.foot-item-left{
  display:flex;
}

.foot-item-right{
  display:flex;
  margin-left:auto;
  margin-right:10px;
  align-items: center;
}

.page_bottom{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #FFD52E;
  display: flex;
  border-radius: 4px;
  align-items: center;
  justify-content: center;
}

.page_bottom.gray{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #D9D9D9;
  display: flex;
  align-items: center;
  flex-direction: row ; 
} 

.page_bottom_pay{
  width:100%;
  height:45px;
  position:fixed; 
  bottom:5px;
  border-top: 1px solid rgb(245, 245, 245);
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
}

.cancel{
  width:100px;
  height:35px;
  display: flex;
  align-items: center;
  justify-content: center;  
  border:0.5px solid #D9D9D9;
  border-radius: 100px;
  color:#999999;
  font-size:14px;
  margin-right:10px;
  margin-left:40%;
}

.continue{
  margin-left:auto;
  margin-right:10px;
  width:110px;
  height:35px;
  border-radius: 100px;
  background-color:#FFD52E;
  display: flex;
  align-items: center;
  justify-content: center;  
  color:#333333;
  font-size:14px;
}

/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}
 
 
/* 底部弹出框 */
.bottom-positon{
  height:304px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}


.modal-head{
  height:43px;
  margin-left:10px;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-bottom: 0.5px solid #E5E5E5;
  color:#333333;
  font-size:14px;
}
 
 