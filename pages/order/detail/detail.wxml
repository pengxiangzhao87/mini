<!--pages/my/order/detail/detail.wxml-->
<view class="head">
  <view>
    <view style="display: flex;align-items: center;">
      <image style="width:13px;height:16px;margin-left:10px;" src="/image/address@3x.png"></image>
      <text style="margin-left:10px;color:#333333;font-size:16px;font-weight: bolder;">{{info.consignee_address}}</text>
    </view>
    <view style="display:flex;align-items: center;width:100%;margin-left:28px;margin-top:7px;font-size:14px;color:#333333;font-weight: 400;">
      <text decode="true">{{info.consignee_name}}&nbsp;&nbsp;{{info.consignee_phone}}</text>
    </view>
  </view>
</view>

<view class="body">
  <view  wx:for="{{detailList}}" wx:for-index="idxx" wx:key="id" wx:for-item="detail">
    <view style="margin-left:10px;padding-top:5px;font-size:12px;color:#999999;">{{detail.supplier}}</view>
    <view  wx:for="{{detail.goods}}" wx:for-index="idx" wx:key="id" wx:for-item="item">
      <view class="list-item" bindtap="toDetail" data-sid="{{item.s_id}}">
        <view style="width:66px;height:66px;">
          <image style="width:66px;height:66px;" mode="aspectFit" src="{{item.imgUrl}}" binderror="errorPic" data-idx="{{idx}}" data-iddx="{{idxx}}"></image>
        </view>
        <view style="margin-left:14px;width:100%;">
          <view style="display:flex;flex-direction:row;">
            <view style="height:43px;width:100%;">
              <view class="goods-name">{{item.name}}</view>
            </view>
            <view class="list-canFeed" hidden="{{info.order_status==5 || info.order_status==6}}" catchtap="refund" data-id="{{item.id}}" data-status="{{item.chargeback_status==null?3:item.chargeback_status}}">{{item.chargeback_status==null?'申请退款':(item.chargeback_status==1?'退款中':'已退款')}}</view> 
          </view>
          <view><text style="color:#FF1907;font-size:14px;">{{item.price}}</text><text style="color:#666666;font-size:12px;"> /{{item.num}}</text></view>
          <view><text style="color:#666666;font-size:12px;">单号：{{item.id}}</text></view>
        </view>
      </view>
      <view class="extra-list" hidden="{{item.is_extra==0 || item.is_extra==undefined}}">
        <view class="extra-price {{item.is_extra==1?'':'red'}}" >{{item.msg}}</view>
        <view class="extra-pic" hidden="{{item.extra_img_url==''}}">
          <view  wx:for="{{item.extra_img_url}}"  wx:for-index="index" wx:key="idx" wx:for-item="pic">
            <image style="width:50px;height:50px;margin-right:10px;" bindtap="enlargement" data-id="{{item.id}}" data-pic="{{pic}}" mode="widthFix" src="{{pic}}" binderror="errorExtraPic" data-idx="{{idx}}" data-idxx="{{idxx}}" data-index="{{index}}"></image>
          </view>
        </view>
      </view>
      <view wx:if="{{!(idxx==detailList.length-1 && idx==detail.goods.length-1)}}">
        <view style="background-color:#E5E5E5;height:0.5px;margin-left:86px;margin-right:10px;margin-top:10px;"></view>
      </view>
    </view>
  </view>
</view>

<view class="foot">
  <view class="foot-item">
    <view class="foot-item-left" style="margin-top:10px;">订单号</view>
    <view class="foot-item-right" style="margin-top:10px;"><text decode="true">{{info.o_id}}&nbsp;</text><text bindtap="copy" data-oid="{{info.o_id}}" style="color:#FFD52E;">复制</text></view>
  </view>  
  <view class="foot-item" >
    <view class="foot-item-left">下单时间</view>
    <view class="foot-item-right">{{info.order_time}}</view>
  </view>
  <view class="foot-item" >
    <view class="foot-item-left">配送方式</view>
    <view class="foot-item-right">{{info.consignee_range_time==''?'自提':'配送'}}</view>
  </view>
   <view class="foot-item" hidden="{{info.order_status!=3}}">
    <view class="foot-item-left">送达时间</view>
    <view class="foot-item-right">{{info.last_time}}</view>
  </view>
  <view class="foot-item" hidden="{{info.order_status==5}}">
    <view class="foot-item-left">支付方式</view>
    <view class="foot-item-right">{{info.payment_channel==1?'微信':(info.payment_channel==2?'支付宝':'我的账户')}}</view>
  </view>
  <view class="foot-item">
    <view class="foot-item-left">商品金额</view>
    <view class="foot-item-right">￥{{goodsPrice}}</view>
  </view>
  <view class="foot-item" hidden="{{info.order_status==5}}">
    <view class="foot-item-left">实付金额</view>
    <view class="foot-item-right"><text style="color:#FF1F1F">￥{{info.order_status==6?0:goodsPrice}}</text></view>
  </view>
  <view class="foot-item" hidden="{{info.last_time==null}}">
    <view class="foot-item-left">送达时间</view>
    <view class="foot-item-right">{{info.last_time}}</view>
  </view>
  <view hidden="{{info.extra_channel==null}}">
    <view style="background-color:#E5E5E5;height:0.5px;margin-left:5px;margin-right:5px;margin-bottom:10px;"></view>
    <view class="foot-item">
      <view class="foot-item-left">差价支付方式</view>
      <view class="foot-item-right">{{info.extra_channel==1?'微信':(info.extra_channel==2?'支付宝':'我的账户')}}</view>
    </view>
    <view class="foot-item">
      <view class="foot-item-left">差价支付金额</view>
      <view class="foot-item-right">￥{{info.extra_payment}}</view>
    </view>
    <view class="foot-item">
      <view class="foot-item-left">差价支付时间</view>
      <view class="foot-item-right">{{info.extra_time}}</view>
    </view>
  </view>
<view hidden="{{deal.length==0}}">
  <view style="background-color:#E5E5E5;height:0.5px;margin-left:5px;margin-right:5px;margin-bottom:10px;"></view>
    <view  wx:for="{{deal}}" wx:for-index="idx" wx:key="id" wx:for-item="item">
      <view class="foot-item">
        <view class="foot-item-left">退款</view>
        <view class="foot-item-right">我的账户</view>
      </view>
      <view class="foot-item">
        <view class="foot-item-left">退款金额</view>
        <view class="foot-item-right">￥{{item.deal_price}}</view>
      </view>
      <view class="foot-item">
        <view class="foot-item-left">到账时间</view>
        <view class="foot-item-right">{{item.createTime}}</view>
      </view>
    </view>
  </view>
</view>

<view wx:if="{{info.order_status!=6}}">
  <view wx:if="{{info.order_status==5}}">
    <view class="page_bottom_pay" >
      <view class="cancel" bindtap="closeOrder" data-oid="{{info.o_id}}">取消订单</view>
      <view class="continue" bindtap="continuePayment"><view style="width:60px;">继续支付</view><view style="width:30px;">{{countDown}}</view></view>
    </view>   
  </view>
  <view wx:if="{{info.order_status!=5}}">
    <view class="page_bottom" bindtap="extraPayment" hidden="{{info.extraPrice==0 || info.extra_channel!=null}}" >
      <text style="color:#333333;font-size:16px;">补差价￥{{info.extraPrice}}</text>
    </view>
  </view>
</view>
   