/* pages/shoppingCar/payment/payment.wxss */
page{
  width:100%;
  height:100%;
  background-color: rgb(248, 248, 248);
  
}
.head{
  margin:10px 10px 10px 10px;
  height:50px;
  background-color: #FFFFFF;
  border:0.5px solid #FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
}
.head.head_address{
  margin:10px 10px 10px 10px;
  height:70px;
  background-color: #FFFFFF;
  border:0.5px solid #FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
}
.body{
  margin:0px 10px 10px 10px;
  background-color: #FFFFFF;
  border-radius: 4px;
}

.payment{
  margin-left:10px;
  margin-right:10px;
  margin-bottom:70px;
  background-color: #FFFFFF;
  border-radius: 4px;
}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid rgb(245, 245, 245);
  background-color: #FFFFFF;
  display: flex;  
  align-items: center;
}


.toPayment{
  width:150px;
  height:45px;
  background-color:#FFD52E;
  border-radius: 50px;
  display: flex;
  align-items: center;
  justify-content: center;  
  font-size:16px;
}


.pay_bottom{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #FFD52E;
  display: flex;
  border-radius: 4px;
  align-items: center;
  justify-content: center;
}

.pay_bottom.gray{
  width:94%;
  height:45px;
  margin-left:3%;
  position:fixed; 
  bottom:5px;
  background-color: #D9D9D9;
  display: flex;
  align-items: center;
  flex-direction: row ; 
} 
/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}
 
 
/* 底部弹出框 */
.bottom-positon{
  height:304px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
 

.modal-head{
  height:43px;
  margin-left:10px;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-bottom: 0.5px solid #E5E5E5;
  color:#333333;
  font-size:14px;
}
.modal-left{
  background-color:#FFFFFF;
  color:#FFD52E;
}
.modal-left.modal-left-white{
  background-color:#E5E5E5;
  color:#333333;
}