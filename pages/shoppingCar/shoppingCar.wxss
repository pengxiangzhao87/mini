/* pages/shoppingCar/shoppingCar.wxss */
page{
  background-color:rgb(243, 243, 243);
  height:100%;
  width:100%;
}
.head{
  width:100%;
  display: flex;  
  border-top: 1px solid #F5F5F5;
  padding-top:10px;
  padding-bottom: 10px;
  background-color: #FFFFFF;
}
.postage{
  height:30px;
  width:100%;
  background-color:#FFD52E;
  font-size:12px;
  color:#2C2C2C;
  display: flex;  
  justify-content: center;  
  align-items: center;
  flex-direction: row  ;
}
.btn{
  background-color:#FFEEAA;
  border:1px solid #FFD52E;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}
.afterbtn{
  border: 0;
}

.list{
  display: flex;  
  align-items: center;
  flex-direction: row  ;
  height:94px;
  margin:0px 10px 10px 10px;
  border-radius: 4px;  
  background-color: #FFFFFF ;
 
}

.title{
  display: flex;  
  align-items: center;
  flex-direction: row  ;
}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid #D9D9D9;
  background-color: #FFFFFF;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}

.checkNum{
  width:116px;
  height:45px;
  background-color:#FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-left:auto;
  margin-right:10px;
  color:#333333;
  font-size:16px;
}