<!--pages/commodity.wxml-->
<view style="background-color: #FFD52E;height:190px">
  <view style="font-size:14px;margin-left:10px;display:flex; align-items: center;margin-bottom:5px;">
    <image src="/image/nav_shouye_dizhi@3x.png" style="width:16px;height:18px;"></image>
    <text style="font-size:14px;color:#333333;margin-left:5px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;width:40%;">送至：{{address}}</text>
  </view>
  <navigator  class="search_arr" style="background-color: #FFFFFF ;" url="search/history/history">  
    <image src="/image/icon_shouye_sousuo@3x.png" class="searchcion"></image>
    <input style="width:60%;" type="text" placeholder="搜索商品" placeholder-style="color:#999999;font-size:12px;" value="" disabled="true"/> 
  </navigator >  
  <view class="carousel" ></view>
</view>

<view class="icon">
  <view class="icon_first">
    <view style="margin-left:12%;" data-tId="1" bindtap="toCategory">
      <image src="/image/shouye_shuiguo@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">水果</view>
    </view>

    <view style="margin-left:12%;" data-tId="2" bindtap="toCategory">
      <image src="/image/shouye_shucai@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">蔬菜</view>
    </view>

    <view style="margin-left:12%;" data-tid="3" bindtap="toCategory">
      <image src="/image/shouye_haixian@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">海鲜</view>
    </view>

    <view style="margin-left:12%;" data-tid="4" bindtap="toCategory">
      <image src="/image/shouye_roulei@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">肉类</view> 
    </view>
  </view>
  <view class="icon_second">

    <view style="margin-left:12%;" data-tid="5" bindtap="toCategory">
      <image src="/image/shouye_ganguo@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">干果</view>
    </view>

    <view style="margin-left:12%;" data-tid="6" bindtap="toCategory">
      <image src="/image/shouye_direliang@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">低热量</view>
    </view>

    <view style="margin-left:12%;" data-tid="7" bindtap="toCategory">
      <image src="/image/shouye_lingshi@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">零食</view>
    </view>

    <view style="margin-left:12%;" data-tid="8" bindtap="toCategory">
      <image src="/image/shouye_qita@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;font-size:13px;color:#666666 ;">其他</view> 
    </view>
  </view>
</view>

<view class="hotTitle">
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
  <text style="font-size:18px;color:#333333;font-weight:border;" decode="true">&nbsp;&nbsp;热销商品&nbsp;&nbsp;</text>
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
</view>

<view style="background-color:rgb(248, 248, 248);height:100%;">
  <view class="hotGoods" >
    <view class="goods" >
      <view wx:for="{{commodity}}" wx:for-index="idx" wx:key="s_id">
        <view bindtap="toDetail" wx:if="{{idx%2==0}}" data-sid="{{commodity[idx].s_id}}" style="padding-bottom:5px;margin-bottom:5px;background-color: #FFFFFF ;border-radius: 5px;  ">
            <image style="width:100%;border-top-left-radius:5px ;border-top-right-radius:5px ;" mode="widthFix" src="{{baseUrl}}upload/{{commodity[idx].coverUrl}}"></image>
            <view style="display:flex;font-size:14px;margin-left:10px;margin-top:5px;color:#33333;">{{commodity[idx].s_name}}</view>
            <view style="font-size:12px;color:#999999;margin-left:10px;margin-top:2px;">{{commodity[idx].s_corporate_name}}</view>
            <view style="font-size:16px;margin-top:5px;margin-left:10px;">
              <text style="color:red;font-size:18px;">{{commodity[idx].price}}</text>{{commodity[idx].unit}}
              <image catchtap="addCar" data-sid="{{commodity[idx].s_id}}" src="{{commodity[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:18px;height:18px;margin-right:10px;float:right;margin-top:5px;"></image>
            </view>
        </view>
      </view>
    </view>
    <view class="goods" >
      <view wx:for="{{commodity}}" wx:for-index="idx" wx:key="s_id">
        <view  wx:if="{{idx%2!=0}}" bindtap="toDetail" data-sid="{{commodity[idx].s_id}}" style="padding-bottom:5px;margin-bottom:5px;  background-color: #FFFFFF ;border-radius: 5px;  ">
          <image class="goodsImg" style="width:100%;border-top-left-radius:5px ;border-top-right-radius:5px ;" mode="widthFix" src="{{baseUrl}}upload/{{commodity[idx].coverUrl}}"></image>
            <view style="font-size:14px;margin-left:10px;margin-top:5px;color:#33333;">{{commodity[idx].s_name}}</view>
            <view style="font-size:12px;color:#999999;margin-left:10px;margin-top:2px;">{{commodity[idx].s_corporate_name}}</view>
            <view style="font-size:16px;margin-top:5px;margin-left:10px;">
            <text style="color:red;font-size:18px;">{{commodity[idx].price}}</text>{{commodity[idx].unit}}
            <image catchtap="addCar" data-sid="{{commodity[idx].s_id}}" src="{{commodity[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:18px;height:18px;margin-right:10px;float:right;margin-top:5px;"></image>
          </view>
        </view>
      </view> 
    </view>
  </view> 

  <view hidden="{{hidden}}" class="baseLine">
    <text decode="true">我也是有底线的&nbsp;&nbsp;</text>
    <image style="width:12px;height:12px;" src="/image/shouye_dixian@3x.png"></image>
  </view>
</view>
 
 
<view class="wrap">
  <!-- modal  -->
  <view class="modal modal-bottom-dialog" hidden="{{hideFlag}}">
    <view class="modal-cancel" bindtap="hideModal"></view>
    <view class="bottom-dialog-body bottom-positon" animation="{{animationData}}">
      <view class="modal-head">授权登录</view>
      <button open-type="getPhoneNumber" type="primary" style="margin-top:30px;width:60%;height:35px;display:flex; align-items: center;justify-content: center;font-size:14px; ">微信手机号一键登录</button>
      <button bindtap="toLogin" type="primary" style="margin-top:30px;width:60%;height:35px;display:flex; align-items: center;justify-content: center;font-size:14px;">使用其他手机号登录</button>
    </view>
  </view>
</view>