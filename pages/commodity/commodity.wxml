<!--pages/commodity.wxml-->
<view style="background-color: #FFD52E;height:190px">
  <view style="font-size:14px;margin-left:10px;"><image src="/image/nav_shouye_dizhi@3x.png" style="width:18px;height:18px;"></image>送至：{{address}}</view>
  <navigator  class="search_arr" style="background-color: #FFFFFF ;" url="search/history/history">  
    <image src="/image/icon_shouye_sousuo@3x.png" class="searchcion"></image>
    <input style="width:60%;" type="text" placeholder="搜索商品" value="" disabled="true"/> 
  </navigator >  
  <view class="carousel" ></view>
</view>

<view class="icon">
  <view class="icon_first">
    <view style="margin-left:12%;" data-tId="1" bindtap="toCategory">
      <image src="/image/shouye_shuiguo@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">水果</view>
    </view>

    <view style="margin-left:12%;" data-tId="2" bindtap="toCategory">
      <image src="/image/shouye_shucai@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">蔬菜</view>
    </view>

    <view style="margin-left:12%;" data-tid="3" bindtap="toCategory">
      <image src="/image/shouye_haixian@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">海鲜</view>
    </view>

    <view style="margin-left:12%;" data-tid="4" bindtap="toCategory">
      <image src="/image/shouye_roulei@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">肉类</view> 
    </view>
  </view>
  <view class="icon_second">

    <view style="margin-left:12%;" data-tid="5" bindtap="toCategory">
      <image src="/image/shouye_ganguo@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">干果</view>
    </view>

    <view style="margin-left:12%;" data-tid="6" bindtap="toCategory">
      <image src="/image/shouye_direliang@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">低热量</view>
    </view>

    <view style="margin-left:12%;" data-tid="7" bindtap="toCategory">
      <image src="/image/shouye_lingshi@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">零食</view>
    </view>

    <view style="margin-left:12%;" data-tid="8" bindtap="toCategory">
      <image src="/image/shouye_qita@3x.png" style="height:40px;width:40px;"></image>
      <view style="width:40px;display: flex;justify-content: center;">其他</view> 
    </view>
  </view>
</view>

<view class="hotTitle">
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
  <text style="font-size:25px;" decode="true">&nbsp;&nbsp;热销商品&nbsp;&nbsp;</text>
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
</view>

<view style="background-color:rgb(243, 243, 243);height:100%;">
  <view>
    <view wx:for="{{commodity}}" wx:for-index="idx" wx:key="s_id">
      <view class="hotGoods" wx:if="{{idx%2==0}}">
        <view class="goods" bindtap="toDetail" data-sid="{{commodity[idx].s_id}}">
          <view class="img-wapper">
            <image class="goodsImg" src="{{baseUrl}}upload/{{commodity[idx].coverUrl}}"></image>
          </view>
          <view style="font-size:14px;margin-left:10px;margin-top:5px;">{{commodity[idx].s_name}}</view>
          <view style="font-size:12px;color:#999999;margin-left:10px;margin-top:2px;"><text decode="true">月售&nbsp;{{commodity[idx].monthSale}}&nbsp;&nbsp;&nbsp;&nbsp;库存&nbsp;{{commodity[idx].stock}}</text></view>
          <view style="font-size:12px;margin-top:5px;margin-left:10px;">
            <text style="color:red;font-size:18px;">{{commodity[idx].price}}</text>{{commodity[idx].unit}}
            <image catchtap="addCar" data-sid="{{commodity[idx].s_id}}" src="{{commodity[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:18px;height:18px;margin-right:10px;float:right;margin-top:5px;"></image>
          </view>
        </view>
        <view class="goods" hidden="{{idx+1>commodity.length-1}}" bindtap="toDetail" data-sid="{{commodity[idx+1].s_id}}">
            <view class="img-wapper">
              <image class="goodsImg" src="{{baseUrl}}upload/{{commodity[idx+1].coverUrl}}"></image>
            </view>
            
            <view style="font-size:14px;margin-left:10px;margin-top:5px;">{{commodity[idx+1].s_name}}</view>
            <view style="font-size:12px;color:#999999;margin-left:10px;margin-top:2px;"><text decode="true">月售&nbsp;{{commodity[idx+1].monthSale}}&nbsp;&nbsp;&nbsp;&nbsp;库存&nbsp;{{commodity[idx+1].stock}}</text></view>
            <view style="font-size:12px;margin-top:5px;margin-left:10px;">
              <text style="color:red;font-size:18px;">{{commodity[idx+1].price}}</text>{{commodity[idx+1].unit}}
              <image catchtap="addCar" data-sid="{{commodity[idx+1].s_id}}" src="{{commodity[idx+1].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:18px;height:18px;margin-right:10px;float:right;margin-top:5px;"></image>
            </view>
        </view>
      </view> 
    </view>
  </view>

  <view hidden="{{hidden}}" class="baseLine">
    <text decode="true">我也是有底线的&nbsp;&nbsp;</text>
    <image style="width:12px;height:12px;" src="/image/shouye_dixian@3x.png"></image>
  </view>
</view>
 
 
