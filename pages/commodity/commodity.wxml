<!--pages/commodity.wxml-->
<view style="background-color: #FFD52E;padding-bottom:10px;height:{{topH}}px;">
  <view style="font-size:14px;margin-left:10px;display:flex; align-items: center;margin-bottom:5px;">
    <image src="/image/nav_shouye_dizhi@3x.png" style="width:16px;height:18px;"></image>
    <text style="font-size:14px;color:#333333;margin-left:5px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;width:40%;">送至：{{address}}</text>
  </view>
  <navigator class="search_arr" style="background-color: #FFFFFF ;" url="search/history/history">  
    <image src="/image/icon_shouye_sousuo@3x.png" class="searchcion"></image>
    <input style="width:60%;" type="text" placeholder="搜索商品" placeholder-style="color:#999999;font-size:12px;" value="" disabled="true"/> 
  </navigator >  
 
  <view class="carousel" >
    <swiper autoplay="true" interval="5000" indicator-dots="true" indicator-active-color="#ffffff" style="width:100%;height:{{bannerH}}px;">
      <swiper-item>
        <image mode="aspectFit" bindtap="toSeason" style="height:100%;width:100%;" src="{{baseUrl}}upload/qr_user.jpg"></image>
      </swiper-item>
      <swiper-item>
        <image mode="aspectFit" bindtap="toSeason" style="height:100%;width:100%;" src="{{baseUrl}}upload/banner-fruite@3x.png"></image>
      </swiper-item>
      <swiper-item>
        <image mode="aspectFit" bindtap="toNews" style="height:100%;width:100%;" src="{{baseUrl}}upload/banner-news@3x.png"></image>
      </swiper-item>
      <swiper-item>
        <image mode="aspectFit" bindtap="toSale" style="height:100%;width:100%;" src="{{baseUrl}}upload/banner-sale@3x.png"></image>
      </swiper-item>
    </swiper >
  </view>
</view>

<image class="addImg" src="/image/add_point.png" hidden="{{pointHid}}"  style="left:{{bus_x}}px;top:{{bus_y}}px;"></image>

<view class="icon">
  <view class="icon_first">
    <view style="margin-left:8%;" data-tId="1" bindtap="toCategory">
      <image src="/image/shouye_shuiguo@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">水果</view>
    </view>

    <view style="margin-left:10%;" data-tId="2" bindtap="toCategory">
      <image src="/image/shouye_shucai@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">蔬菜</view>
    </view>

    <view style="margin-left:10%;" data-tid="3" bindtap="toCategory">
      <image src="/image/shouye_haixian@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">海鲜</view>
    </view>

    <view style="margin-left:10%;" data-tid="4" bindtap="toCategory">
      <image src="/image/shouye_roulei@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">肉类</view> 
    </view>
  </view>
  <view class="icon_second">

    <view style="margin-left:8%;" data-tid="5" bindtap="toCategory">
      <image src="/image/shouye_ganguo@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">干果</view>
    </view>

    <view style="margin-left:10%;" data-tid="6" bindtap="toCategory">
      <image src="/image/shouye_direliang@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">低热量</view>
    </view>

    <view style="margin-left:10%;" data-tid="7" bindtap="toCategory">
      <image src="/image/shouye_lingshi@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">零食</view>
    </view>

    <view style="margin-left:10%;" data-tid="8" bindtap="toCategory">
      <image src="/image/shouye_qita@3x.png" style="height:50px;width:50px;"></image>
      <view style="width:50px;display: flex;justify-content: center;font-size:13px;">其他</view> 
    </view>
  </view>
</view>

<view class="hotTitle">
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
  <text style="font-size:20px;color:#333333;font-weight:border;" decode="true">&nbsp;&nbsp;热销商品&nbsp;&nbsp;</text>
  <image src="/image/shouye_rexiao@3x.png" style="width:17.6px;height:21px;"/>
</view>

<view style="background-color:rgb(245, 245, 245);height:100%;">
  <view class="hotGoods" >
    <view class="goods" >
      <view wx:for="{{commodity}}" wx:for-index="idx" wx:key="s_id">
        <view  style="padding-bottom:10px;margin-bottom:8px;background-color: #FFFFFF ;border-radius: 12px;">
          <image bindtap="toDetail" wx:if="{{idx%2==0}}" data-sid="{{commodity[idx].s_id}}" style="width:100%;border-top-left-radius:12px ;border-top-right-radius:12px;" mode="widthFix" src="{{commodity[idx].coverUrl}}" binderror="errorPic" data-idx="{{idx}}"></image>
          <view style="font-size:12px;color:#999999;margin-left:10px;">{{commodity[idx].s_corporate_name}}</view>
          <view class="goods-name" >{{commodity[idx].s_name}}</view>
          <view style="margin-top:10px;margin-left:10px;height:23px;">
            <text style="color:#FF1907;font-size:20px;"><text style="font-size:14px;">￥</text>{{commodity[idx].s_price}}</text>
            <text style="font-size:14px;color:#999999;" hidden="{{item.is_active==3}}">{{commodity[idx].unit}}</text>
            <text decode="true"  hidden="{{item.is_active!=3}}">&nbsp;</text>
            <text style="text-decoration:line-through;color:#999999;font-size:14px;" hidden="{{item.is_active!=3}}">￥{{item.original_price}}</text>
            <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" style="width:23px;height:23px;margin-right:10px;float:right;padding:0 0 0 0 ;">
              <image  data-idx="{{idx}}" src="{{commodity[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:23px;height:23px;"></image>
            </button>
            
          </view>
        </view>
      </view>
    </view>
    <view class="goods" >
      <view wx:for="{{commodity}}" wx:for-index="idx" wx:key="s_id">
        <view  wx:if="{{idx%2!=0}}" bindtap="toDetail" data-sid="{{commodity[idx].s_id}}" style="padding-bottom:10px;margin-bottom:8px;  background-color: #FFFFFF ;border-radius: 12px;  ">
          <image style="width:100%;border-top-left-radius:12px ;border-top-right-radius:12px ;" mode="widthFix" src="{{commodity[idx].coverUrl}}" binderror="errorPic" data-idx="{{idx}}"></image>
           <view style="font-size:12px;color:#999999;margin-left:10px;">{{commodity[idx].s_corporate_name}}</view>
          <view class="goods-name">{{commodity[idx].s_name}}</view>
          <view style="margin-top:10px;margin-left:10px;height:23px;">
            <text style="color:#FF1907;font-size:20px;"><text style="font-size:14px;">￥</text>{{commodity[idx].s_price}}</text>
            <text style="font-size:14px;color:#999999;" hidden="{{item.is_active==3}}">{{commodity[idx].unit}}</text>
            <text decode="true"  hidden="{{item.is_active!=3}}">&nbsp;</text>
            <text style="text-decoration:line-through;color:#999999;font-size:14px;" hidden="{{item.is_active!=3}}">￥{{item.original_price}}</text>
            <image catchtap="addCar" data-idx="{{idx}}" src="{{commodity[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" style="width:23px;height:23px;margin-right:10px;float:right;"></image>
          </view>
        </view>
      </view> 
    </view>
  </view> 


  <view hidden="{{hidden}}" class="baseLine">
    <text decode="true">我也是有底线的&nbsp;&nbsp;</text>
    <image style="width:12px;height:12px;" src="/image/shouye_dixian@3x.png"></image>
  </view>
</view>



<view class="modal modal-bottom-dialog" hidden="{{hideFlag}}">
  <view class="modal-cancel" bindtap="hideModal"></view>
  <view class="bottom-dialog-body bottom-positon" animation="{{animationData}}">
    <view class="modal-head">授权登录</view>
    <button open-type="getPhoneNumber" type="primary" style="margin-top:30px;width:60%;height:35px;display:flex; align-items: center;justify-content: center;font-size:14px; ">微信手机号一键登录</button>
    <button bindtap="toLogin" type="primary" style="margin-top:30px;width:60%;height:35px;display:flex; align-items: center;justify-content: center;font-size:14px;">使用其他手机号登录</button>
  </view>
</view>



<view class="modal modal-bottom-dialog" catchtouchmove="disableRoll" style="border-bottom:1px solid rgb(245, 245, 245)" hidden="{{addFlag}}">
  <view class="modal-cancel" bindtap="hideAddModal"></view>
  <view class="bottom-dialog-body bottom-positon" animation="{{animationData}}">
    <view class="hotGoods" style="margin-left:10px;margin-top:10px;">
      <view style="width:100px;height:100px;">
        <image style="width:100px;height:100px;border-radius:5px;border:0.5px solid #E5E5E5" mode="aspectFit" src="{{commodity[idxFlag].coverUrl}}" binderror="errorPic" data-idx="{{idxFlag}}"></image>
      </view>
      <view style="width:100%;margin-right:10px;">
        <view class="page_bottom_name">{{commodity[idxFlag].s_name}}</view>
        <view style="margin-left:10px;margin-top:20px;">
          <text style="color:#FF1907;font-size:20px;"><text style="font-size:14px;">￥</text>{{commodity[idxFlag].s_price}}</text>
          <text style="font-size:14px;color:#999999;" decode="true">{{commodity[idxFlag].unit}}&nbsp;</text>
          <text style="text-decoration:line-through;color:#999999;font-size:14px;" hidden="{{commodity[idxFlag].is_active!=3}}">￥{{commodity[idxFlag].original_price}}</text>
        </view>
      </view>
    </view>
    <view class="specification">
      <view style="margin-left:20px;font-size:14px;color:#999999;">规格</view>
      <view style="display:flex;flex-direction:row;align-items: center;margin-right:10px;margin-left:auto;">
        <view class="btn {{disabled?'btn_disabled':''}}"  bindtap="subtract" disabled="{{disabled}}">{{commodity[idxFlag].init_unit==0?50:1}}</view>
        <image src="/image/shouye_xq_sub@3x.png" style="margin-left:5px;margin-right:7px;height:1.3px;width:10px"></image>
        <view style="font-size:14px;color:#333333;display:flex;align-items: center;"><text decode="true">{{totalSum}}&nbsp;{{commodity[idxFlag].init_unit==0?'g':'个'}}</text></view>
        <image src="/image/shouye_xq_add@3x.png" style="margin-left:7px;margin-right:5px;height:10px;width:10px"></image>
        <view class="btn"  bindtap="add">{{commodity[idxFlag].init_unit==0?50:1}}</view>
      </view>
    </view>
    <view class="page_bottom">
      <view style="margin-right:10px;margin-left:auto;">
        <view style="display:flex;align-items: center;justify-content: center;">
          <view style="color:#FF1907;margin-right:10px;font-size:18px;margin-bottom:10px;">￥{{totalPrice}}</view>
          <view class="addShoppingCar" bindtap="addShoppingCar"><text style="font-size:14px;color:#333333;">加入购物车</text></view>
        </view>
      </view>
    </view>   
  </view>
</view>
