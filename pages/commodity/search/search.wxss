/* pages/commodity/search/search.wxss */
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 110rpx;  
  margin-left: 10px;  
  margin-right:10px;
  margin-top:10px;
  margin-bottom: 10px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:10px;
  width: 15px;  
  height: 15px;  
}  

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  border-radius: 5px;  
  width:45%;
  height:270px;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(73, 73, 73, 0.1);
  margin-top:10px;
  margin-left:3%;
}

.img-wapper{
  width: 100%;height: 0;padding-bottom: 100%;position: relative;
}

.goodsImg{
  width: 100%;height: 100%;position: absolute;
}
.baseLine{
  display:flex;
  align-items: center;
  justify-content:center;
  font-size:10px;
  color:#999999;
  margin-top:20px;
  margin-bottom:20px;
}
 