/* pages/commodity/search/search.wxss */
.search_arr {  
  border-radius: 110rpx;  
  margin-left: 10px;  
  margin-right:10px;
  margin-top:10px;
  margin-bottom: 10px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:10px;
  width: 15px;  
  height: 15px;  
}  

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  width:46.25%;
  margin-top:8px;
  margin-left:2.5%;
}

.goods-name{
  font-size:14px;
  margin-left:10px;
  margin-top:5px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.img-wapper{
  width: 100%;height: 0;padding-bottom: 100%;position: relative;
}

.baseLine{
  display:flex;
  align-items: center;
  justify-content:center;
  font-size:10px;
  color:#999999;
  margin-top:20px;
  margin-bottom:20px;
}


.floorstatus{
  width:70px;
  height:27px;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  background: linear-gradient(to right, #FFD32E , #FF992E);
  position:fixed; 
  right:0;
  bottom:110px;
  font-size: 12px;
  color:#FFFFFF;
  display:flex;
  align-items: center;
  justify-content:center;
}



/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
  height:210px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
 

.modal-head{
  height:43px;
  margin-left:10px;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-bottom: 0.5px soli #E5E5E5;
  color:#333333;
  font-size:14px;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
  margin-top:10px;
}

.btn{
  background-color:#FFEEAA;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}
 
.page_bottom{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  position:fixed; 
  bottom:0;
  align-items: center;
  margin-left:auto;
  margin-right:20px;
  width:100%;
  height:45px;
}
.addShoppingCar{
  width:150px;
  height:35px;
  background-color:#FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-bottom:10px;
}

.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}


.carImg{
  width: 40px;
  height: 40px;
  border:1px solid white;
  background-color:rgba(0, 0, 0, 0.4);
  border-radius: 50px;
  position:fixed; 
  left:10px;
  bottom:80px;
  display: flex;
  align-items: center;
}

.carSum{
  width:16px;
  height:16px;
  background-color:#FF1907;
  border:1px solid white;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:10px;
  top:0px;
  right:-4px;
  display: flex;
  position: absolute;
}
.page_bottom_name{
  font-size:14px;
  margin-left:10px;
  color:#333333;
  padding-top:10px;
  height:40px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}