/* pages/commodity.wxss */
.search_arr {  
  border-radius: 110px;  
  margin-left: 3%;  
  width:94%;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:35%;
  width: 15px;  
  height: 15px;  
}  

.carousel{
  border-radius: 10px;  
  height:170px;
  width:96%;
  margin-top:10px;
  margin-left:2%;
  overflow: hidden;
  position:relative;
  z-index: 0;
}

.icon{
  margin-top:50px;
}
.icon_first,.icon_second{
  padding-top:20px;
  display: flex;  
  flex-direction: row  ;
}

.hotTitle{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  margin-top:10px;
  margin-bottom:10px;
}

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  width:47.8%;
  margin-top:5px;
  margin-left:1.5%;
}


.baseLine{
  display:flex;
  align-items: center;
  justify-content:center;
  font-size:10px;
  color:#999999;
  margin-top:20px;
  margin-bottom:20px;
}


/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}
 
 
/* 底部弹出框 */
.bottom-positon{
  height:200px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
 

.modal-head{
  height:43px;
  margin-left:10px;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-bottom: 0.5px soli #E5E5E5;
  color:#333333;
  font-size:14px;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
  margin-top:10px;
}

.btn{
  background-color:#FFEEAA;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}
 
.page_bottom{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  position:fixed; 
  bottom:0;
  align-items: center;
  margin-left:auto;
  margin-right:20px;
  width:100%;
  height:45px;
}
.addShoppingCar{
  width:150px;
  height:35px;
  background-color:#FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-bottom:10px;
}

.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;
}
