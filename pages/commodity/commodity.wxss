/* pages/commodity.wxss */

.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 110px;  
  margin-left: 3%;  
  width:94%;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:35%;
  width: 15px;  
  height: 15px;  
}  

.carousel{
  border-radius: 30rpx;  
  background-color: black;
  height:170px;
  width:96%;
  margin-top:10px;
  margin-left:2%;
  overflow: hidden;
  position:relative;
  z-index: 0;
}

.icon{
  margin-top:50px;
}
.icon_first,.icon_second{
  padding-top:20px;
  display: flex;  
  flex-direction: row  ;
}

.hotTitle{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  margin-top:10px;
}

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  border-radius: 5px;  
  width:45%;
  height:270px;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  background-color: #FFFFFF ;
  margin-top:10px;
  margin-left:3%;
}

.img-wapper{
  width: 100%;height: 0;padding-bottom: 100%;position: relative;
}

.goodsImg{
  width: 100%;height: 100%;position: absolute;
}

.baseLine{
  display:flex;
  align-items: center;
  justify-content:center;
  font-size:10px;
  color:#999999;
  margin-top:20px;
  margin-bottom:20px;
}
