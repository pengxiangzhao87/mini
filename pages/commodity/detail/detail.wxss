/* pages/commodity/detail/detail.wxss */
.head{
  width: 100%;
  height: 100vw;
}

.priceUnit{
  display: flex;  
  flex-direction:row ;
  margin:10px 5px 10px 5px;
  align-items: center;
  width:100%;
  font-size:12px;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
}

.btn{
  background-color:#FFEEAA;
  border:1px solid #FFD52E;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.afterbtn{
  border: 0;
}

.desc{
  width:100%;
  align-items: center;
  justify-content: center;  
  margin-bottom: 55px;
}

.desc,image{
  width:100%;

}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid #D9D9D9;
  background-color: #FFFFFF;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}
.toShoppingCar{
  position: relative;
  width:32px;
  height:40px;
  margin-left:20px;
}
.carSum{
  width:12px;
  height:12px;
  background-color:#FF1907;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:8px;
  top:0px;
  right:0px;
  display: flex;
  position: absolute;
}

.addShoppingCar{
  width:175px;
  height:45px;
  background-color:#FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-left:auto;
  margin-right:15px;
 
}