/* pages/commodity/detail/detail.wxss */
.contain{
  width: 100%;
  overflow-x: hidden;
}
.head{
  width: 100%;
  height: 100vw;
}

.wx-swiper-dots{position:relative;left: unset!important;right: 0;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: -5px;
}

.priceUnit{
  display: flex;  
  flex-direction:row ;
  margin:10px 5px 10px 10px;
  align-items: center;
  width:100%;
  font-size:16px;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
}

.btn{
  background-color:#FFEEAA;
   
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.afterbtn{
  border: 0;
}

.desc{
  width:100%;
  align-items: center;
  justify-content: center;  
  margin-bottom: 65px;
}

.desc,image{
  width:100%;

}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid #ececec;
  background-color: #ffffff;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}
.toShoppingCar{
  position: relative;
  width:32px;
  height:40px;
  margin-left:20px;
}
.carSum{
  width:14px;
  height:14px;
  background-color:#FF1907;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:8px;
  top:0px;
  right:0px;
  display: flex;
  position: absolute;
}

.addShoppingCar{
  width:175px;
  height:40px;
  background-color:#FFD52E;
  border-radius: 50px;
  display: flex;
  align-items: center;
  justify-content: center;  
}

.disabledCar{
  width:175px;
  height:45px;
  background-color:#999999;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
}


/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
  height:200px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  display:flex;
  justify-content: center;  
}



.share_bottom{
  position:fixed; 
  bottom:0;
  width:100%;
  height:80px;
}