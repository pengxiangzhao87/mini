/* pages/commodity/detail/detail.wxss */
.head{
  width: 100%;
  height: 100vw;
}

.priceUnit{
  display: flex;  
  flex-direction:row ;
  margin:10px 5px 10px 5px;
  align-items: center;
  width:100%;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
}

.btn{
  background-color:#FFEEAA;
  border:1px solid #FFD52E;
}

.btn_disabled{
  background-color:#D9D9D9;
  border:0;
}

.afterbtn{
  border: 0;
}

.desc{
  width:90%;
  align-items: center;
  justify-content: center;  
  margin-bottom: 55px;
}

.desc,image{
  width:100%;

}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid rgb(146, 146, 146);
  background-color: #FFFFFF;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}
.toShoppingCar{
  position: relative;
  width:32px;
  height:40px;
  margin-left:10px;
}
.carSum{
  width:10px;
  height:10px;
  background-color:red;
  color:white;
  border-radius: 45px;
  align-items: center;
  justify-content: center;  
  font-size:8px;
  top:0px;
  right:0px;
  display: flex;
  position: absolute;
}

.addShoppingCar{
  width:175px;
  height:45px;
  background-color:#FFD52E;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-left:auto;
  margin-right:10px;
 
}