/* pages/avtive/season/season.wxss */
page{
  background-color:#47C7FF;
}
.row{
  display:flex;  
  flex-direction:row;
  width:94%;
  margin-left:3%;
  border-radius: 10px;
  height:128px;
  margin-top:10px;
  background-color: #ffffff;
}

.row_name{
  font-weight: 400;
  font-size:14px;
  margin-top:5px;
  height:40px;
  padding-top:0px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}


.carImg{
  width: 40px;
  height: 40px;
  border:1px solid white;
  background-color:rgba(0, 0, 0, 0.4);
  border-radius: 50px;
  position:fixed; 
  left:10px;
  bottom:80px;
  display: flex;
  align-items: center;
}

.carSum{
  width:16px;
  height:16px;
  background-color:#FF1907;
  border:1px solid white;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:10px;
  top:0px;
  right:-4px;
  display: flex;
  position: absolute;
}


/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
  height:210px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}
 

.modal-head{
  height:43px;
  margin-left:10px;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-bottom: 0.5px solid #E5E5E5;
  color:#333333;
  font-size:14px;
}

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.specification{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  width:100%;
  margin-top:10px;
}

.btn{
  background-color:#FFEEAA;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}

.btn.btn_disabled{
  background-color:#D9D9D9;
  border:0;
  width:31px;
  height:22px;
  font-size:11px;
  color:#333333;
  display: flex;  
  align-items: center;
  justify-content: center;  
}
 
.page_bottom{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  position:fixed; 
  bottom:0;
  align-items: center;
  margin-left:auto;
  margin-right:20px;
  width:100%;
  height:45px;
}

.addShoppingCar{
  width:150px;
  height:35px;
  background-color:#FFD52E;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-bottom:10px;
}

.page_bottom_name{
  font-size:14px;
  margin-left:10px;
  font-weight: 400;
  padding-top:10px;
  height:40px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}