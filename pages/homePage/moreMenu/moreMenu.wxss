/* pages/homePage/moreMenu/moreMenu.wxss */
page{
  background-color:rgb(246, 246, 246);
  width:100%;
  height:100%;
}
.search{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  width:100%;
  position:fixed; 
  top:0;
  z-index: 1;
  background-color:#ffffff;
  height:45px;
}

.search_arr {  
  border-radius: 110px;  
  margin-left: 3%;  
  width:94%;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.searchcion {  
  margin-left:35%;
  width: 15px;  
  height: 15px;  
}   

.goods-name{
  width:60%;
  overflow: hidden;
  display: -webkit-box;
  word-wrap : break-word ;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height:45px;
}

.carSum{
  width:15px;
  height:15px;
  background-color:#FF1907;
  border:1px solid white;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:10px;
  top:0px;
  right:-4px;
  display: flex;
  position: absolute;
}

.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}