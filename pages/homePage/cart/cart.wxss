/* pages/homePage/cart/cart.wxss */
page{
  background-color:rgb(246, 246, 246);
  width:100%;
  height:100%;
}
.category{
  font-weight: 500;
  height:30px;
  margin-left:10px;
  font-size:12px;
  color:#999999;
  display:flex;
  flex-direction: row  ;
  align-items: center;
}
.row{
  width:100%;
  height:90px;
  background-color:#ffffff;
  display:flex;
  flex-direction: row  ;
  align-items: center;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(80px);
  transform: translateX(80px);
  margin-left: -80px;
}


.del{
  background-color: #FF1907;
  writing-mode:vertical-rl;
  width: 80px;
  height:90px;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size:16px;
  -webkit-transform: translateX(80px);
  transform: translateX(80px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .row, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

.food-name{
  width:70%;
  overflow: hidden;
  display: -webkit-box;
  word-wrap : break-word ;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height:40px;
  margin-top:10px;
  font-size:14px;
}

.fine{
  margin-left:auto;
  margin-right:10px;
  font-size:14px;
  color:#666666;
}

.menuNum{
  height:20px;
  width:30px;
  border:1px solid #bfbfbf;
  border-radius:5px;
  display:flex;
  align-items: center;
  justify-content:center;
 
}

.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid #ececec;
  background-color: #ffffff;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}

.balance{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  justify-content: center;  
  margin-right:10px;
  font-size:16px;
  color:#ffffff;
  background-color:#FFD52E;
  height:40px;
  width:100px;
  border-radius: 40px;
}