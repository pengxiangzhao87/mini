/* pages/homePage/foodDetail/foodDetail.wxss */
.row{
  border-radius: 5px;
  background-color:rgb(250, 250, 250);
  margin-top:10px;
  margin-left:10px;
  margin-right:10px;
  padding-top:10px;
  padding-bottom:10px;
  align-items: center;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;

}

.goods-name{
  margin-left:auto;
  margin-right:10px;
  overflow: hidden;
  display: -webkit-box;
  word-wrap : break-word ;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


.page_bottom{
  width:100%;
  height:55px;
  position:fixed; 
  bottom:0;
  border-top: 1px solid #ececec;
  background-color: #ffffff;
  display: flex;  
  flex-direction:row ;
  align-items: center;
}

.balance{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  justify-content: center; 
  margin-right:10px;
  font-size:16px;
  font-weight: 500;
  background-color:#FFD52E;
  height:40px;
  width:150px;
  border-radius: 40px;
}

.carSum{
  width:15px;
  height:15px;
  background-color:#FF1907;
  border:1px solid white;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:10px;
  top:0px;
  right:-4px;
  display: flex;
  position: absolute;
}
 
.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}