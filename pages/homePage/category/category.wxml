<!--pages/homePage/category/category.wxml-->
<view wx:for="{{menuList}}" style="margin:10px;border-radius:10px;height:160px;  position: relative;" wx:for-index="idx" wx:key="m_id" wx:for-item="item" 
    bindtap="toMenuDetail" data-menuid="{{item.m_id}}">
  <image src="{{baseUrl+'upload/'+item.m_img_adr}}"  mode="aspectFill" style="width:100%;;height:160px;border-radius:10px;"></image>
  <view style="height:70px;width:100%;  position: absolute;background: black; bottom: 0; opacity: 0.6;color:white;font-size:14px; border-bottom-left-radius: 10px;border-bottom-right-radius: 10px;font-size:16px;font-weight:500;">
    <view style="display:flex;flex-direction: row;margin-left:20px;margin-top:10px;">
      <view class="goods-name">{{item.m_name}}</view>
      <view style="margin-left:auto;margin-right:20px;">{{item.m_cook_time}}分钟</view>
    </view>
    <view style="display:flex;flex-direction: row;margin-left:20px;margin-top:5px;">
      <view ><text style="font-size:14px;color:#FF1907;">￥</text><text style="font-size:22px;color:#FF1907;">{{item.m_cook_price}}</text></view>
      <image src="{{otherOptionList[idx].isCar==1?'/image/shouye_gouwuche1@3x.png':'/image/shouye_gouwuche@3x.png'}}" catchtap="addCart" style="width:22px;height:22px;margin-right:20px;margin-left:auto;opacity: 1;"></image>
    </view>
    
  </view>
</view>

