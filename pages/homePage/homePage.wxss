/* pages/homePage/homePage.wxss */
.search_arr {  
  border-radius: 110px;  
  margin-left: 3%;  
  width:94%;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:35%;
  width: 15px;  
  height: 15px;  
}  

.carousel{
  border-radius: 10px;  
  width:94%;
  margin-top:20px;
  margin-left:3%;
  overflow: hidden;
  position:relative;
  z-index: 1000;
}

.wx-swiper-dots{position:relative;left: unset!important;right: 0;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: -5px;
}
 
.icon{
  margin-top:30px;
}

.icon_first,.icon_second{
  padding-top:10px;
  display: flex;  
  flex-direction: row;
}

.hotTitle{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  margin-top:20px;
  margin-bottom:15px;
 
}

.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  width:46.25%;
  margin-top:8px;
  margin-left:2.5%;
}

.goods-imgParent{
  width:100%;
  border-top-left-radius:5px ;
  border-top-right-radius:5px ;
  position: relative;
}


.goods-name{
  font-size:14px;
  margin-left:10px;
  width:60%;
  margin-top:2px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.goods-time{
  font-size:14px;
  margin-right:10px;
  margin-left:auto;
  margin-top:2px;

}
.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}