/* pages/commodity/search/search.wxss */
.search{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  width:100%;
  position:fixed; 
  top:0;
  z-index: 1;
  background-color:#ffffff;
  height:45px;
}

.search_front {  
  border-radius: 110px;  
  margin-bottom: 10px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  cursor: pointer;
}  

 

.search_img_front{
  height:25px;
  width:25px;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  cursor: pointer;
}

.search_back {  
  border-radius: 110px;  
  margin-bottom: 10px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  cursor: pointer;

} 

.search_img_back{
  height:25px;
  width:25px;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  cursor: pointer;
 
}

.searchcion {  
  margin-left:10px;
  width: 15px;  
  height: 15px;  
}  


.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  width:46.25%;
  margin-top:8px;
  margin-left:2.5%;
}

.goods-imgParent{
  width:100%;
  border-top-left-radius:5px ;
  border-top-right-radius:5px ;
  position: relative;
}


.goods-name{
  font-size:14px;
  margin-left:10px;
  width:60%;
  margin-top:2px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.goods-time{
  font-size:14px;
  margin-right:10px;
  margin-left:auto;
  margin-top:2px;

}

.floorstatus{
  width:70px;
  height:27px;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  background: linear-gradient(to right, #FFD32E , #FF992E);
  position:fixed; 
  right:0;
  bottom:110px;
  font-size: 12px;
  color:#FFFFFF;
  display:flex;
  align-items: center;
  justify-content:center;
}
 

.carSum{
  width:12px;
  height:12px;
  background-color:#FF1907;
  border:1px solid white;
  color:white;
  border-radius: 50px;
  align-items: center;
  justify-content: center;  
  font-size:10px;
  top:0px;
  right:-4px;
  display: flex;
  position: absolute;
}


/* ---------------------------- */
/*模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
.modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.7);}
.bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
  height:210px;
  background-color: #FFFFFF;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}

.page_bottom{
  display: flex;  
  flex-direction:row ;
  align-items: center;
  position:fixed; 
  bottom:0;
  align-items: center;
  margin-left:auto;
  margin-right:20px;
  width:100%;
  height:45px;
}
.addShoppingCar{
  width:120px;
  height:35px;
  background-color:#FFD52E;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-bottom:10px;
}
.addImg{
  width: 40px;
  height: 40px;
  border-radius: 50px;
  position: absolute;
  overflow: hidden;

}

.food-name{
  width:80%;
  overflow: hidden;
  display: -webkit-box;
  word-wrap : break-word ;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height:40px;
  margin-top:5px;
}