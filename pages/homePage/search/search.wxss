/* pages/commodity/search/search.wxss */
.search{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  width:100%;
  position:fixed; 
  top:0;
  z-index: 100;
  background-color:#ffffff;
  height:45px;
}

.search_arr {  
  border-radius: 110px;  
  margin-left: 10px;  
  margin-top:10px;
  margin-bottom: 10px;
  display: flex;  
  flex-direction: row  ;
  align-items: center;
}  
.search_arr input{  
  margin-left: 10px;  
  height: 32px;  
  border-radius: 5px;  
}  

.searchcion {  
  margin-left:10px;
  width: 15px;  
  height: 15px;  
}  


.hotGoods{
  display: flex;  
  flex-direction: row  ;
}

.goods{
  width:46.25%;
  margin-top:8px;
  margin-left:2.5%;
}

.goods-imgParent{
  width:100%;
  border-top-left-radius:5px ;
  border-top-right-radius:5px ;
  position: relative;
}


.goods-name{
  font-size:14px;
  margin-left:10px;
  width:60%;
  margin-top:2px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.goods-time{
  font-size:14px;
  margin-right:10px;
  margin-left:auto;
  margin-top:2px;

}

.floorstatus{
  width:70px;
  height:27px;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  background: linear-gradient(to right, #FFD32E , #FF992E);
  position:fixed; 
  right:0;
  bottom:110px;
  font-size: 12px;
  color:#FFFFFF;
  display:flex;
  align-items: center;
  justify-content:center;
}
